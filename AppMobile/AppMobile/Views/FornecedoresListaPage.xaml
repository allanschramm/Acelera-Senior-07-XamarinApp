<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMobile.Views.FornecedoresListaPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Lista de Fornecedores"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"
                   FontSize="22"
                   FontAttributes="Bold"/>

            <ListView x:Name="listViewFornecedores">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            
                            <StackLayout Padding="10">
                                <Label Text="{Binding Nome}" FontSize="18"/>
                                <Label Text="{Binding Endereco}" FontSize="12"/>
                            </StackLayout>
                            
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>                
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>